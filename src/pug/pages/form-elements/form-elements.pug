extends ../../layout/uikit-base/uikit-base
include ../../includes/input-field/input-field
include ../../includes/dropdown/dropdown

block title
  title Form Elements

block content
  .form-elements__wrapper
    .form-elements__block
      .form-elements__element(class="form-elements__element--min-margin")
        +input({
          title: "Text Field",
          type: "email",
          name: "email",
          placeholder: "Email"
        })
      .form-elements__element(class="form-elements__element--min-margin")
        +input({
          title: "Text Field",
          type: "text",
          name: "awesome",
          placeholder: "placeholder",
          value: "This is pretty awesome"
        })
      .form-elements__element(class="form-elements__element--min-margin")
        +dropdown({
          title: "Dropdown",
          label: "Сколько гостей",
          elements: [
            {label: "Взрослые", name: "adult", min: "1"},
            {label: "Дети", name: "children"},
            {label: "Младенцы", name: "baby"}
          ]
        })
      .form-elements__element
        +input({
          title: "masked text field",
          type: "text",
          name: "maskedDate",
          placeholder: "ДД.ММ.ГГГГ",
          pattern: "[0-9]{2}.[0-9]{2}.[0-9]{4}"
        })

