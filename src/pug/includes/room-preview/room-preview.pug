include ../img-slider/img-slider
include ../rating/rating

mixin room-preview({number, link, price, isLuxe, rating, comments, images})
  if isLuxe
    - var luxe= "room-preview__number--luxe"
  if !link
    - link= "/mock-address/change-me"
  .room-preview
    .room-preview__slider
      +img-slider({images})
    a.room-preview__link(href= link)
      span.room-preview__number-wrapper
        span.room-preview__number-symbol= "№ "
        span.room-preview__number(class= luxe)= number
      span.room-preview__price-wrapper
        span.room-preview__price= `${price}₽`
        span.room-preview__price-descr= " в сутки"
    .room-preview__block
      .room-preview__rating
        +rating({
          name: `room-${number}`,
          rate: rating
        })
      .room-preview__comments
        span.room-preview__comments-count= comments
        span.room-preview__comments-text= " Отзывов"
