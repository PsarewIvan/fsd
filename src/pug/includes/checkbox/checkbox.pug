mixin checkbox({name, elements})
  ul.checkbox__list
    for elem in elements
      li.checkbox__element
        input.checkbox__input(
          class= "visually-hidden"
          id= elem.id,
          type="checkbox",
          name= name,
          value= elem.value,
          checked= elem.checked
        )
        label.checkbox__label(for= elem.id)= elem.label
